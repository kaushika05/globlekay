{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": [
    "server/**/*.ts",
    "src/util/**/*.ts",
    "src/util/**/*.tsx"
  ]
}
